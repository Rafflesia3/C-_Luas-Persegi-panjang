#include<stdio.h>

void cetak_mundur(char S[]){
     int i,n;
     
    printf("\t\t Pelita Bangsa \n\n");
    printf("=========================================\n");
    printf("Nama    : Rafi Alwan Setyawan \nNIM     : 311810325 \nKelas   : TI.18.D7 \n");
    printf("=========================================\n");
     
     for(n=0;n<S[n];n++);
     printf("panjang array = %d\n",n);
     for(i=n-1;i>=0;i--){
        printf("%c",S[i]);
     }

}
int main(){
    char str[50]="anton";
    cetak_mundur(str);
}
